manifest {
    homePage = 'https://github.com/iarcbioinfo/platypus-nf'
    description = 'Germline variant calling with platypus'
    mainScript = 'platypus.nf'
}

process {
    container = 'iarcbioinfo/platypus-nf'
}

timeline {
  enabled = true
  file = "${params.output_folder}/nf-pipeline_info/platypus-nf_timeline.html"
}

report {
  enabled = true
  file = "${params.output_folder}/nf-pipeline_info/platypus-nf_report.html"
}

trace {
  enabled = true
  file = "${params.output_folder}/nf-pipeline_info/platypus-nf_trace.txt"
}

profiles {
  jupiter {
    process {
      scratch = false
      errorStrategy = 'retry'
      maxErrors = 10000
      memory = { task.exitStatus == 130 ? 4.GB * task.attempt : 4.GB }
      maxRetries = { task.exitStatus == 130 ? 5 : 1 }
    }
    executor {
      name = 'lsf'
      queueSize = 48
      perJobMemLimit = true
    }
	}
}
